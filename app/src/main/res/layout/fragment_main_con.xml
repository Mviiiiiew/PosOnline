<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#263238"
              android:weightSum="2"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_Contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_account_circle_white_48dp"
                >

            </ImageView>

            <TextView
                android:id="@+id/text_company"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_alignTop="@+id/ic_Contact"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ic_Contact"
                android:padding="12dp"
                android:text="บริษัท STRSoftware จำกัด"

                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_alignLeft="@+id/text_company"
                android:layout_below="@+id/text_company"
                android:layout_toRightOf="@+id/ic_Contact"
                android:padding="12dp"
                android:text="10-11 ถ.ลูกหลวง ดุสิต กรุงเทพ 10300"

                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/text_tel"
                android:layout_width="500dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_company"
                android:layout_below="@+id/text_address"
                android:layout_toRightOf="@+id/ic_Contact"
                android:padding="12dp"
                android:text="Tel: 02-628-6565 , 02-628-6566"

                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/text_mail1"
                android:layout_width="500dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_company"
                android:layout_below="@+id/text_tel"
                android:layout_toRightOf="@+id/ic_Contact"
                android:padding="12dp"
                android:text="sales@straccountonline.com    "

                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/text_mail2"
                android:layout_width="500dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_company"
                android:layout_below="@+id/text_mail1"
                android:layout_toRightOf="@+id/ic_Contact"
                android:padding="12dp"
                android:text="supportstr@straccountonline.com"

                android:textSize="20dp"

                />

        </RelativeLayout>
    </LinearLayout>




</LinearLayout>